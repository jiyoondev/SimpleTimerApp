<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/walking_orange"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="walking_orange.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Simple Timer"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/time"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="00 : 00"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekerBar"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:max="3600"
        android:layout_marginTop="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:thumbTint="#FF8500"
        android:progressTint="#FF8500" />

    <Button
        android:id="@+id/start"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="75dp"
        android:text="Start"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekerBar"
        android:background="@drawable/ripple_background_green"/>

    <Button
        android:id="@+id/stop"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="75dp"
        android:text="Stop"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/seekerBar"
        android:background="@drawable/ripple_background_orange"/>

</androidx.constraintlayout.widget.ConstraintLayout>